# Make some possibly destructive commands more interactive.
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# Add some easy shortcuts for formatted directory listings and add a touch of color.
alias ls='ls -F --color=auto'
alias ll='ls -l'
alias la='ls -a'
alias lla='la -l'
alias lx='ls -X'
alias llx='lx -l'
alias l='ls -1'


if (( $+commands[lsd] )); then
  alias ls='lsd'
fi
# Make grep more user friendly by highlighting matches
# and exclude grepping through .svn folders.
alias grep='grep --color=auto --exclude-dir=\.svn'

if type nvim.appimage > /dev/null 2>&1; then
  alias vi='nvim.appimage'
  alias vim='nvim.appimage'
  alias nvim='nvim.appimage'
elif type nvim > /dev/null 2>&1; then
  alias vi='nvim'
  alias vim='nvim'
else
  alias vi='vim'
fi

# Enable 256 color and use wrapped SSH bin.
alias ssh='TERM=xterm-256color ssh'

# Easy way to set application "defaults"
alias dvgrab='dvgrab --autosplit --timestamp --format dv2 --opendml --size 0'

disable -r time       # disable shell reserved word
alias time='time -p ' # -p for POSIX output
